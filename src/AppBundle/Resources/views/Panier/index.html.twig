{% extends "base.html.twig" %}

{% block title %}Troc ma zone - Votre Panier{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    Votre panier
                    <h6 class="card-subtitle mb-2 text-muted pull-right">Prix</h6>
                </div>
                <div class="card-body card-body-panier">
                    {% for produit in produits %}
                        <h5 class="pull-right"><strong>{{produit.article.prix}} €</strong></h5>
                        <div class="row mt-3 mb-4">
                            <div class="col-md-2">
                                <img class="img-fluid img-panier" src="{{ asset('uploads/img/' ~ produit.article.image) }} " alt="{{produit.article.nom}}">
                            </div>
                            <div class="col-md-10">
                                <h3 class="mt-4 mt-md-0 text-primary">{{produit.article.nom}}</h3>
                                {{produit.article.description}}
                                <p>Catégorie : {{produit.article.categorie.nom}}</p>
                                <h5>Quantité : {{produit.quantite}}</h5>
                                <a class="btn btn-outline-danger" href="{{ path('panier_delete', {'id': produit.article.id}) }}">
                                    <i class="fa fa-trash"> Supprimer</i>
                                </a>
                            </div>
                        </div>
                        <hr />
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    Total de votre panier
                </div>
                <div class="card-body card-body-panier">
                    <h5>{{totalPanier}} €</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <button class="btn btn-warning">
                                    <i class="fa fa-credit-card-alt"> Passer la commande</i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <a class="btn btn-success" href="{{ path('homepage')}}">
                                    <i class="fa fa-arrow-left"> Retour au menu</i>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}